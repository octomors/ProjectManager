<Window x:Class="ProjectManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManager"
        mc:Ignorable="d"
        Title="Менеджер проектов"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <Style x:Key="HeaderTextBlockStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height ="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Список проектов-->
        <TextBlock Grid.Row="0" Text="Проекты"
                   Style="{StaticResource HeaderTextBlockStyle}"/>

        <ListBox Grid.Row="1" 
                 ItemsSource="{Binding Projects}"
                 SelectedItem="{Binding SelectedProject}"
                 SelectionMode="Single"
                 DisplayMemberPath="Name">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Исправить координаты пикетов и ГП в новой копии" Command="{Binding FixProjectCommand}"/>
                    <MenuItem Header="Создать объединеннный проект" Command="{Binding CreateMergedProjectCommand}"/>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
        
        <Button Grid.Row="2" Content="Добавить проект"
                Command="{Binding AddProjectCommand}"
                Height="30"/>

        <!--Список отчетов об ошибках-->
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Отчеты"
                   Style="{StaticResource HeaderTextBlockStyle}"/>

        <ListBox Grid.Row="1" Grid.Column="1"
                 ItemsSource="{Binding Reports}"
                 SelectedItem="{Binding SelectedReport}"
                 SelectionMode="Single"
                 HorizontalContentAlignment="Stretch">
            
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="ReportBorder" BorderBrush="#EEEE" BorderThickness="1"
                            Padding="5" Margin="0, -2, 0, 0">
                        <StackPanel>
                            <TextBlock Text="{Binding EmployeeName}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding CheckDateTime, StringFormat={}{0:dd.MM.yyyy HH:mm}}"
                                       FontStyle="Italic" Foreground="#666"/>

                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Удалить" Command="{Binding DeleteReportCommand}"/>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>

        <Button Grid.Row="2" Grid.Column="1" Content="Сгенерировать новый отчет"
                Command="{Binding GenerateReportCommand}"
                Height="30"/>

        <!--Список ошибок-->
        <TextBlock Grid.Row="0" Grid.Column="2" Text="Ошибки"
                   Style="{StaticResource HeaderTextBlockStyle}"/>

        <ListBox Grid.Row="1" Grid.Column="2"
                 ItemsSource="{Binding Errors}"
                 SelectedItem="{Binding SelectedError}"
                 SelectionMode="Single">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Удалить" Command="{Binding DeleteErrorCommand}"/>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>

        <Button Grid.Row="2" Grid.Column="2" Content="Добавить ошибку"
                Command="{Binding AddErrorCommand}"
                Height="30"/>
    </Grid>
</Window>
